# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UserApplication.index

# Login action
GET      /logout                    controllers.Application.logout
GET      /openIDCallback            controllers.Application.openIDCallback
GET      /openIDCallbackYahoo       controllers.Application.openIDCallbackYahoo
GET      /googleLogin               controllers.Application.googleLogin
GET      /yahooLogin                controllers.Application.yahooLogin
GET      /index                     controllers.Application.index
POST     /login                     controllers.Application.authenticate
GET      /signIn                    controllers.Application.signIn
POST     /signIn                    controllers.Application.postSignIn

# User actions
GET      /profile                   controllers.UserApplication.profile
POST     /profile                   controllers.UserApplication.postProfile
GET      /reset                     controllers.UserApplication.reset

# Events actions
GET      /newEvent                  controllers.Events.newEvent
POST     /newEvent                  controllers.Events.postNewEvent
POST     /deleteEvent/:eventid      controllers.Events.postDeleteEvent(eventid: Long)
GET      /editEvent/:eventid        controllers.Events.event(eventid: Long)
GET      /addParticipant            controllers.Events.addParticipant
GET      /newGift/:eventid          controllers.Events.newGift(eventid: Long)
POST     /editGift                  controllers.Events.postEditGift
GET      /editGift/:giftid          controllers.Events.editGift(giftid: Long)
POST     /updateGiftStatus/:giftid  controllers.Events.updateGiftStatus(giftid: Long)
POST     /deleteGift/:giftid        controllers.Events.postDeleteGift(giftid: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
