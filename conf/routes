# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.UserApplication.index

# Login action
GET      /logout                    controllers.Application.logout
GET      /openIDCallback            controllers.Application.openIDCallback
GET      /openIDCallbackYahoo       controllers.Application.openIDCallbackYahoo
GET      /googleLogin               controllers.Application.googleLogin
GET      /yahooLogin                controllers.Application.yahooLogin
GET      /index                     controllers.Application.index
POST     /login                     controllers.Application.authenticate

# User actions
GET      /reset                     controllers.UserApplication.reset
GET      /newEvent                  controllers.UserApplication.newEvent
POST     /newEvent                  controllers.UserApplication.postNewEvent
GET      /editEvent/:eventid        controllers.UserApplication.event(eventid: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
