# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.HomeController.index

# Login action
GET         /signup                  controllers.RegistrationController.registrationForm
POST        /signup                  controllers.RegistrationController.register
GET         /signin                  controllers.AuthenticationController.signInForm
POST        /signin                  controllers.AuthenticationController.authenticateCredentials
GET         /signin/:provider        controllers.AuthenticationController.authenticateSocial(provider)
GET         /signout                 controllers.AuthenticationController.signOut

# User actions
GET         /profile                 controllers.ProfileController.profile
#POST     /profile                   controllers.UserApplication.postProfile

# Events actions
GET      /newEvent                  controllers.Events.newEvent
POST     /newEvent                  controllers.Events.postNewEvent
POST     /deleteEvent/:eventid      controllers.Events.postDeleteEvent(eventid: Long)
GET      /editEvent/:eventid        controllers.Events.event(eventid: Long)
GET      /editEvent/:eventid/:userid controllers.Events.eventWithUser(eventid: Long, userid: java.util.UUID)
GET      /addParticipant            controllers.Events.addParticipant
GET      /newGift/:eventid          controllers.Events.newGift(eventid: Long)
POST     /editGift/:eventid         controllers.Events.postEditGift(eventid: Long)
GET      /editGift/:giftid          controllers.Events.editGift(giftid: Long)
GET      /viewGift/:giftid          controllers.Events.viewGift(giftid: Long)
POST     /updateGiftStatus/:giftid  controllers.Events.updateGiftStatus(giftid: Long)
POST     /deleteGift/:giftid        controllers.Events.postDeleteGift(giftid: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
